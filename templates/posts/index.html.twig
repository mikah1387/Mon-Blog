{% extends 'base.html.twig' %}

{% block title %}touts les articles {% endblock %}

{% block body %}
{% if app.user %}
<div class="button">
  <a href="{{path('posts_add')}}" class="btn">Ajouter votre article</a>
</div>
{% endif %}

<div class="articles">

    
    
    {% for post in articles %}
         
        <a href="{{path('posts_detail',{slug:post.slug})}}" class="cart">
          <div class="img">
            <img src="{{asset('images/image_style/baniere.jpg')}}" alt="image_article">
          </div>

          <div class="body_cart">
            {% for category in post.categories %}
            <h3>Categorie : {{category.name}}</h3>  
            {% endfor %}
            
           <h3> {{post.title}}</h3>
           <h4> {{post.slug}}</h4>
          
           <h4> Auteur : {{post.users.nickname}}</h4>
          </div>

        </a>
    
    {% endfor %}

</div>



{% endblock %}
