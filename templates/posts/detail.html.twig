{% extends 'base.html.twig' %}

{% block title %}{{post.title}}{% endblock %}

{% block body %}
<div class="detail_article">

  <div class="detail">


    <div class="img">
      <img src="{{asset('images/image_style/baniere.jpg')}}" alt="image_article">
    </div>

    <div class="descrip">
      
      <h2> {{post.title}}</h2>
      <h3> {{post.slug}}</h3>
      <p>{{post.content}}</p>
      {% for category in post.categories %}
      <h5>Categorie : {{category.name}}</h5>
      {% endfor %}

      <h4> Auteur : {{post.users.nickname}}</h4>
    </div>

    <div class="descrip">
      <h1> Comentaires </h1>
      {# <h2> {{post.comments.users.nickname}}</h2> #}
      {# <p> {{post.comments.content}} </p> #}
    {% for comment in post.comments %}
      <h2> {{comment.users.nickname}}</h2>
      <p>{{comment.content}} </p>
      <div class="response">
      <h3>Reponse </h3>
      {% for response in comments %}
      {% if response.parent != null and response.parent.id == comment.id %}
      <h2> {{response.users.nickname}}</h2>
      <p>{{response.content}} </p>
      {% endif %}
       
      {# {% if response.parent == comment.id %}
      <h2> {{response.users.nickname}}</h2>
      <p>{{response.content}} </p>
      {% endif %} #}
    {% endfor %}

    </div>
    {% endfor %}

    </div>

  </div>









</div>



{% endblock %}