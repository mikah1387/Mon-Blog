{% extends 'base.html.twig' %}

{% block title %} votre profile Mr {{app.user.nickname}}{% endblock %}

{% block body %}
<section class="profil">
  
     <div class="myprof">

        <div class="image">

            {% if user.image is  null %}
           <img src="" alt="image_profile">
            
            {% else %}
            <img src="{{asset('images/uploads/users/min/300x300-'~ user.image)}}" alt="">
            {% endif %}

           
          </div>
          <h2>Mon Profil  <span>{{user.nickname}}</span></h2>

     </div>
    <nav class="navprofil">

        <li> <a href="#information" class="active"><span class="material-symbols-outlined">
            settings_accessibility
            </span> Profil </a> </li>
        <li> <a href="#articles"> <span class="material-symbols-outlined">
            newsstand
            </span> Mes articles </a> </li>
        <li><a href="#comments"> <span class="material-symbols-outlined">
            comment
            </span>  Mes commentaires </a></li>

    </nav>

    <main class="main_profil">
       
        <div id="information" class="information display">
    
            <h2> Mes informations</h2>
            <h3>Email </h3>
            <span>{{user.email}}</span> 
        </div>

        <div class="carts" id="articles">
             

                {% for post in user.posts %}

                <a href="{{path('posts_detail',{slug:post.slug, id:post.id})}}">
                    <div class="cart">
                        <h3> {{post.slug}}</h3>
                        {% for category in post.categories %}
                        <h4>Categorie : {{category.name}}</h4>
                        {% endfor %}
                        <div class="links">
                           <a href="{{path('posts_delete',{slug:post.slug, id:post.id})}}"><span class="material-symbols-outlined">
                                    delete
                                </span></a>
                            <a href="{{path('posts_update',{slug:post.slug, id:post.id})}}"><span class="material-symbols-outlined">
                                    edit
                                </span></a>
                        </div>
                    </div>
                </a>
                
                {% endfor %}

        </div>
        
        <div class="comments" id="comments">
            
               

                {% for comment in user.comments %}
                <div class="comment">
                {% if comment.parent is  null %}
                <p class="title"> votre commentaire sur l'article <span>{{comment.posts.title}} </span>
                {% else %}
                <p class="title"> votre reponse sur l'article <span>{{comment.posts.title}} </span>
                {% endif %}
                     </p class="content">
                    <p> {{comment.content|raw}} </p>
                    <div class="links">
                        <a href="{{path('comments_delete',{id:comment.id})}}"><span class="material-symbols-outlined">
                                 delete
                             </span></a>
                         <a href="{{path('comments_update',{id:comment.id})}}"><span class="material-symbols-outlined">
                                 edit
                             </span></a>
                     </div>
                </div>
                {% endfor %}
        </div>


    </main>




</section>
{% endblock %}